<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="baileya4.crossswitch.MenuActivity">

    <!--Alexander Bailey, CSCI 412-->

    <TextView
        android:id="@+id/win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/holo_blue_bright"
        android:text="@string/won"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <TextView
            android:id="@+id/button0_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="top"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/black" />

        <TextView
            android:id="@+id/button1_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="top"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/black" />

        <Button
            android:id="@+id/button2_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/button3_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_gravity="top"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/black" />

        <TextView
            android:id="@+id/button4_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_gravity="top"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/black" />

        <TextView
            android:id="@+id/button0_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="top"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/black" />

        <Button
            android:id="@+id/button1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/button2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/button3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/button4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="1"
            android:layout_gravity="top"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/black" />

        <Button
            android:id="@+id/button0_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/button1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/button2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/button3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/button4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="2"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/button0_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="top"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/black" />

        <Button
            android:id="@+id/button1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/button2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/button3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="3"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/button4_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="3"
            android:layout_gravity="top"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/black" />

        <TextView
            android:id="@+id/button0_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_gravity="top"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/black" />

        <TextView
            android:id="@+id/button1_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_gravity="top"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/black" />

        <Button
            android:id="@+id/button2_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/button3_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="4"
            android:layout_gravity="top"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/black" />

        <TextView
            android:id="@+id/button4_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="4"
            android:layout_gravity="top"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/black" />

    </GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonGrid"
        android:layout_alignStart="@+id/buttonGrid"
        android:layout_below="@+id/buttonGrid"
        android:layout_marginTop="140dp"
        android:text=""
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonGrid"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/alert_dark_frame"
        android:backgroundTint="@android:color/holo_purple"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingBottom="20sp"
        android:paddingTop="12sp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:text="@string/player" />

    <TextView
        android:id="@+id/blueTitle"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/player"
        android:text="@string/least"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/greenTitle"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/player"
        android:text="@string/current"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Best"
        style="@style/OutputStyle"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/blueTitle"
        android:layout_below="@+id/blueTitle"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Current"
        style="@style/OutputStyle"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/greenTitle"
        android:layout_below="@+id/greenTitle"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Current"
        android:background="@android:drawable/alert_light_frame"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_centerHorizontal="true"
        android:text="@string/back" />

</RelativeLayout>