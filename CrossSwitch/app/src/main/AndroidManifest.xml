<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="baileya4.crossswitch">

    <application
        android:allowBackup="true"
        android:icon="@drawable/cs_icon_edged"
        android:label="@string/app_name"
        android:logo="@drawable/cs_icon_small"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".CsMenuActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".MineMenuActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CrossActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".PlayerSelectActivity" />
        <activity
            android:name=".AddActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DeleteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UpdateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainMenuActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MatchActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ScoreActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".SpheresActivity" />
        <activity android:name=".TTTActivity"
                  android:screenOrientation="portrait"></activity>
    </application>

</manifest>